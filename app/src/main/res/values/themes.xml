<resources>
    <style name="Theme.HistoryOfKyrgyzstan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryVariant">@color/main_Background</item>
        <item name="colorOnPrimary">@color/bright</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mainColor</item>
        <!-- Apply button style -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>

    </style>

    <!-- Define button style -->
    <style name="Widget.MaterialComponents.Button" parent="Widget.Material3.Button">

            <item name="android:padding">16dp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>

    </style>





    <style name="Theme.HistoryOfKyrgyzstan.NoActionBar">
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Medium</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.HistoryOfKyrgyzstan.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HistoryOfKyrgyzstan.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>